<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DebatezoDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimacion">
        <item name="android:windowEnterAnimation">@anim/deslizar_hacia_dentro_parte_abajo</item>
        <item name="android:windowExitAnimation">@anim/deslizar_hacia_fuera_parte_abajo</item>
    </style>
    <!--Configuracion de color para dialog date pick-->
    <style name="dialog_date" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!--Color boton-->
        <item name="colorOnPrimary">@color/white</item>
        <!--Color fondo de la parte arriba-->
        <item name="colorAccent">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>
</resources>
