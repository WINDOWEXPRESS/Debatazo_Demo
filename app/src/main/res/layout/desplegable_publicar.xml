<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/desplegableP_textV_crearValoracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_tabla_publicar"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/desplegableP_textV_barra"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/barra_horizontal_tabla_publicar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/desplegableP_imagenV_cancelar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/cerrar_tabla_publicar" />

        <TextView
            android:id="@+id/desplegableP_textV_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Publicación"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="25dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/desplegableP_lineaLH_opcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/desplegableP_textV_debate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:text="@string/debate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desplegableP_textV_valoracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/valoracion"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <EditText
            android:id="@+id/desplegableP_editTT_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Introducir titulo"
            android:inputType="text" />

        <EditText
            android:id="@+id/desplegableP_editTT_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Introducir más contexto"
            android:maxLength="250"
            android:inputType="text|textMultiLine" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:background="#E1DFDF"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <Button
            android:id="@+id/desplegableP_button_publicarDebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publicar" />
    </LinearLayout>

</LinearLayout>